	                <div class="one-half">
	                  <h3>{{Iname}} 
				      </h3>
	                </div>
	                <div class="one-forth">
	                  <span class="price">${{price}}</span>
	                </div>
	              </div>
	             <p><span>{{ingredients}}</span> </p>
              </div>
            </div>
			{{/tea}}
        	</div>

        	<div class="col-md-6 col-lg-4 menu-wrap">
        		<div class="heading-menu text-center ftco-animate">
        			<h3>Cocktail</h3>
        		</div> 
			{{#cocktail}}       		
             <div class="menus d-flex ftco-animate">
              <div class="menu-img img" style="background-image: url('images/{{image}}');"></div>
              <div class="text">
              	<div class="d-flex">
	                <div class="one-half">
	                  <h3>{{Iname}} 
				      </h3>
	                </div>
	                <div class="one-forth">
	                  <span class="price">${{price}}</span>
	                </div>
	              </div>
	             <p><span>{{ingredients}}</span> </p>
              </div>
            </div>
			{{/cocktail}}
        	</div>


        	<div class="col-md-6 col-lg-4 menu-wrap">
        		<div class="heading-menu text-center ftco-animate">
        			<h3>Desserts</h3>
        	</div>
			{{#desserts}}
            <div class="menus d-flex ftco-animate">
              <div class="menu-img img" style="background-image: url('images/{{image}}');"></div>
              <div class="text">
              	<div class="d-flex">
	                <div class="one-half">
	                  <h3>{{Iname}} 
				      </h3>
	                </div>
	                <div class="one-forth">
	                  <span class="price">${{price}}</span>
	                </div>
	              </div>
	             <p><span>{{ingredients}}</span> </p>
              </div>
            </div>
			{{/desserts}}
        	</div>


        	<div class="col-md-6 col-lg-4 menu-wrap">
        		<div class="heading-menu text-center ftco-animate">
        			<h3>Wine Card</h3>
        		</div>
        	{{#winecard}}
            <div class="menus d-flex ftco-animate">
              <div class="menu-img img" style="background-image: url('images/{{image}}');"> </div>
              <div class="text">
              	<div class="d-flex">
	                <div class="one-half">
	                  <h3>{{Iname}} 
				      </h3>
					  
	                </div>
	                <div class="one-forth">
	                  <span class="price">${{price}}</span>
	                </div>
	              </div>
	             <p><span>{{ingredients}}</span> </p>
				 
              </div>
            </div>
			{{/winecard}}
        	</div>

			
        	<div class="col-md-6 col-lg-4 menu-wrap">
        		<div class="heading-menu text-center ftco-animate">
        			<h3>Drinks</h3>
        		</div>
        	{{#drinks}}
            <div class="menus d-flex ftco-animate">
              <div class="menu-img img" style="background-image: url('images/{{image}}');"></div>
              <div class="text">
              	<div class="d-flex">
	                <div class="one-half">
	                  <h3>{{Iname}} 
				      </h3>
	                </div>
	                <div class="one-forth">
	                  <span class="price">${{price}}</span>
	                </div>
	              </div>
	             <p><span>{{ingredients}}</span> </p>
              </div>
            </div>
			{{/drinks}}
        	</div>
        </div>
    	</div>

    </section>


    

  {{>footer}}

{{>scripts}}
    
  </body>
</html>